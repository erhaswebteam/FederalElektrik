@{
    Layout = "_ColumnsTwo";

    //title
    Html.AddTitleParts(T("PageTitle.Account").Text);
    int actualPoint = 0;
    foreach (var item in Model)
    {
        actualPoint += item.Point;
    }
}
@section left
    {
    @await Component.InvokeAsync("CustomerNavigation", new { selectedTabId = CustomerNavigationEnum.ProcessHistory })
}
<div class="page account-page address-list-page pl-lg-3">
    <h1 class="h2 generalTitle">@T("Account.CustomerProcessHistory")</h1>
    <br />
    <div class="table-responsive">
        <table class="table table-hover">
            <tr>
                <td></td>
                <td>Harcanabilir Puan : <strong>@actualPoint.ToString("N").Replace(",00", "") Puan</strong></td>
                <td></td>
            </tr>
            <tr><th>Açıklama</th><th style="text-align:center;">Puan</th><th>İşlem Tarihi</th></tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Description</td>
                    <td style="text-align:center;">@item.Point.ToString("N").Replace(",00", "")</td>
                    <td>@item.CreatedOnUtc</td>
                </tr>
            }
            <tr>
                <td></td>
                <td>Harcanabilir Puan : <strong>@actualPoint.ToString("N").Replace(",00", "") Puan</strong></td>
                <td></td>
            </tr>
        </table>
    </div>
</div>

